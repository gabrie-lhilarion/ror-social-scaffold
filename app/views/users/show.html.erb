<section id="left">
<div class="dp-image">

</div>
<p> <%= current_user.name%> </p>
<p> <%= current_user.email%> </p>
<p> <%= current_user.created_at%> </p>
</section>

<section id="middle" class="user-section">
  <article class="timeline">
    <h3><%= "Recent posts by  #{@user.name}"%></h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>

<section id="right"> 

<article>
<h2> Friends</h2>
<ul>
<li> 
<%= render @friendships %>
 </li>
</ul>
</article>

<article>
<h2> People you may know</h2>
<ul>
<li> 
<%= render @users %>
 </li>
</ul>
</article>
 
</section>
